@using TeslaSolarCharger.Shared.Localization
@using TeslaSolarCharger.Shared.Localization.Contracts
@using TeslaSolarCharger.Shared.Localization.Registries.Components.Dialogs

@inject ITextLocalizationService TextLocalizer

<MudDialog>
    <DialogContent>
        @string.Format(T(TranslationKeys.DeleteDialogContentFormat), ElementName)
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">@T(TranslationKeys.DeleteDialogCancel)</MudButton>
        <MudButton Color="Color.Error" OnClick="Submit">@T(TranslationKeys.DeleteDialogConfirm)</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    IMudDialogInstance MudDialog { get; set; } = null!;

    [Parameter]
    public string ElementName { get; set; } = "";

    private string T(string key) =>
        TextLocalizer.Get<DialogsLocalizationRegistry>(key)
        ?? key;

    void Submit() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();
}
