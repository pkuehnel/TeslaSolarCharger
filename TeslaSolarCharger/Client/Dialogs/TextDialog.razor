<MudDialog>
    <DialogContent>
        @(Text)
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Submit">OK</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter]
    public string Text { get; set; } = "";

    void Submit() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();
}