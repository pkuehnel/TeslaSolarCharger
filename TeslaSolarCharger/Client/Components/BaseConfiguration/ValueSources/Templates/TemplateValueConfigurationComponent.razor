@using TeslaSolarCharger.Client.Services.Contracts
@using TeslaSolarCharger.Shared.Dtos.BaseConfiguration
@using TeslaSolarCharger.Shared.Resources.Contracts
@using TeslaSolarCharger.Client.Components.BaseConfiguration.ValueSources
@using TeslaSolarCharger.Shared.Localization
@using TeslaSolarCharger.Shared.Localization.Contracts
@using TeslaSolarCharger.Shared.Localization.Registries
@using TeslaSolarCharger.Shared.Localization.Registries.Components

@inject IDialogService DialogService
@inject ITemplateValueConfigurationService TemplateValueConfigurationService
@inject ISnackbar Snackbar
@inject IConstants Constants
@inject ITextLocalizationService TextLocalizer

<GenericValueConfigurationComponent SourceName="Template"
                                    ConfigurationOverviews="_configurationOverviews"
                                    OnRefreshClicked="RefreshRequestResults"
                                    OnConfigureClicked="id => OpenValueConfigurationDialog(id)"
                                    OnDeleteClicked="id => DeleteValueConfiguration(id)"></GenericValueConfigurationComponent>

@code {
    private List<DtoValueConfigurationOverview>? _configurationOverviews;


    protected override async Task OnInitializedAsync()
    {
        await RefreshRequestResults();
    }

    private async Task RefreshRequestResults()
    {
        _configurationOverviews = await TemplateValueConfigurationService.GetOverviews();
    }

    private async Task OpenValueConfigurationDialog(int? id)
    {
        var options = new DialogOptions()
        {
            CloseButton = true,
            CloseOnEscapeKey = false,
            BackdropClick = true,
        };
        var parameters = new DialogParameters<TemplateValueConfigurationDialog>
        {
            { x => x.ValueConfigurationId, id },
        };
        var title = id == default ? T(TranslationKeys.ValueSourceConfigAdd) : T(TranslationKeys.ValueSourceConfigEdit);
        var dialog = await DialogService.ShowAsync<TemplateValueConfigurationDialog>(TF(TranslationKeys.ValueSourceConfigTitle, T(TranslationKeys.TemplateValue)), parameters, options);
        var result = await dialog.Result;

        await RefreshRequestResults();
        if (result?.Canceled == false)
        {
            Snackbar.Add(T(TranslationKeys.ValueSourceConfigSaved), Severity.Success);
            var timeToWait = TimeSpan.FromSeconds(Constants.RefreshableValuesRefreshIntervalSeconds);
            await Task.Delay(timeToWait);
            await RefreshRequestResults();
            await Task.Delay(timeToWait);
            await RefreshRequestResults();
        }
    }

    private async Task DeleteValueConfiguration(int id)
    {
        var result = await TemplateValueConfigurationService.DeleteAsync(id);
        if (!result.HasError)
        {
            Snackbar.Add(T(TranslationKeys.ValueSourceConfigDeleted), Severity.Success);
        }
        await RefreshRequestResults();
    }

    private string T(string key) =>
        TextLocalizer.Get<ValueSourceConfigurationLocalizationRegistry>(key, typeof(SharedComponentLocalizationRegistry))
        ?? key;

    private string TF(string key, params object[] args) =>
        string.Format(System.Globalization.CultureInfo.CurrentCulture, T(key), args);

}
