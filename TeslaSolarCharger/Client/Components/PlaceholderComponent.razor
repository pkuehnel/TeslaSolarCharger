<div class="d-flex justify-content-center">
    @for (var i = 0; i < Count; i++)
    {
        <MudSkeleton Height="@Height" Width="@Width" />
    }
</div>



@code {

    [Parameter]
    public int Count { get; set; } = 1;

    [Parameter]
    public string? Height { get; set; }

    [Parameter]
    public string? Width { get; set; } = "100%";
}